{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },

    "types": ["vite/client", "node"],

    "allowJs": true
  },
  "include": ["vite-env.d.ts", "src/**/*", "src/**/*.vue", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
